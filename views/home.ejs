<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <style>
        /* General Styling */
body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(135deg, #1e3c72, #2a5298);
    color: white;
    text-align: center;
    margin: 0;
    padding: 20px;
}

/* Heading */
h1 {
    font-size: 2.5rem;
    margin-bottom: 20px;
}

/* Form Styling */
form {
    background: rgba(255, 255, 255, 0.1);
    padding: 20px;
    border-radius: 10px;
    width: 60%;
    max-width: 500px;
    margin: 0 auto;
    box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.2);
}

input[type="text"] {
    width: 80%;
    padding: 10px;
    border: none;
    border-radius: 5px;
    margin-top: 10px;
    font-size: 1rem;
    text-align: center;
}

button {
    background: #ff4b2b;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 5px;
    font-size: 1rem;
    cursor: pointer;
    margin-top: 10px;
    transition: 0.3s;
}

button:hover {
    background: #ff5733;
}

/* Table Styling */
table {
    width: 80%;
    margin: 30px auto;
    border-collapse: collapse;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
}

th, td {
    padding: 15px;
    text-align: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

th {
    background: rgba(255, 255, 255, 0.2);
    font-size: 1.2rem;
}

td a {
    color: #ffcc00;
    text-decoration: none;
    font-weight: bold;
}

td a:hover {
    text-decoration: underline;
}

/* Responsive Design */
@media (max-width: 600px) {
    form {
        width: 90%;
    }
    table {
        width: 100%;
    }
}

    </style>
</head>
<body>
    <h1>URL Shortener</h1>

    <div>
        <form method="POST" action="/url">
            <label>Enter the Original Url</label>
            <input type="text" name="url"  placeholder="Enter the redirect URL" required>
            <button type="submit">Generate</button>
        </form>
    </div> 

    <div>
        <% if(locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>S no.</th>
                        <th>Short URL</th>
                        <th>Redirects</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td><a href="<%= url.shortId %>"><%= url.shortId %></a></td>
                            <td><%= url.redirectURL %></td>
                            <td><%= url.visitHistory.length %></td>
                        </tr>   
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p>No URLs found.</p>
        <% } %>
        
    </div>

</body>
</html>
